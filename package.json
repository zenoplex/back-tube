{
  "name": "static-website-starterkit",
  "version": "0.0.1",
  "description": "static website starterkit with jade, sass and webpack",
  "author": "zenoplex",
  "main": "npm run watch",
  "scripts": {
    "clean": "rm -rf dist",
    "browsersync": "browser-sync start --server dist --files 'dist/css/**/*.css, dist/**/*.html, dist/**/*.js'",
    "jade": "jade src/jade/pages/*.jade --out dist -O \"`yaml2json src/data/site.yaml`\"",
    "jade:watch": "npm run jade -- -w",
    "sass": "node-sass src/sass/*.scss -o dist/css --include-path node_modules/sanitize.css --include-path node_modules/bourbon/app/assets/stylesheets",
    "sass:watch": "npm run sass && npm run sass -- -w",
    "sass:build": "npm run sass && postcss -u autoprefixer -u cssnano -d dist/css dist/css/*.css",
    "webpack": "webpack --hot --inline",
    "webpack:build": "npm run webpack -- --config webpack.config.production.js",
    "webpack:watch": "npm run webpack -- --watch",
    "watch": "npm run clean && parallelshell 'npm run jade:watch' 'npm run sass:watch' 'npm run webpack:watch' 'npm run browsersync'",
    "build": "npm run clean && parallelshell 'npm run jade' 'npm run sass:build' 'npm run webpack:build'"
  },
  "keywords": [
    "babel",
    "jade",
    "sass",
    "webpack"
  ],
  "devDependencies": {
    "autoprefixer": "^6.1.1",
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "browser-sync": "^2.10.0",
    "cssnano": "^3.3.2",
    "jade": "^1.11.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "path": "^0.12.7",
    "postcss-cli": "^2.3.2",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "yaml2json": "^1.0.2"
  },
  "dependencies": {
    "bourbon": "^4.2.6",
    "get-size": "^1.2.2",
    "get-style-property": "^0.1.1",
    "sanitize.css": "^3.0.0"
  },
  "engines": {
    "node": ">=4.2.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenoplex/static-website-starterkit"
  }
}
